  CONTRACT_PREPARATION
  CONTRACT_FOLLOW_UP
  FUNDING
  COLLECTION
  RENEWAL
  GENERAL
}

// CRM Tasks
model CrmTask {
  id              String          @id @default(cuid())
  companyId       String

  // Task Details
  title           String
  description     String?         @db.Text
  category        TaskCategory    @default(GENERAL)

  // Priority & Status
  priority        TaskPriority    @default(MEDIUM)
  status          TaskStatus      @default(PENDING)

  // Timing
  dueDate         DateTime?
  dueTime         String?         // HH:MM
  reminderDate    DateTime?
  completedAt     DateTime?

  // Assignment
  assignedToId    String?
  assignedById    String?

  // Related Records
  contactId       String?
  merchantId      String?
  dealId          String?

  // Recurrence
  isRecurring     Boolean         @default(false)
  recurringPattern String?        // daily, weekly, monthly
  recurringEndDate DateTime?

  // Notes
  completionNotes String?         @db.Text

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relationships
  company         Company         @relation(fields: [companyId], references: [id])
  contact         Contact?        @relation(fields: [contactId], references: [id])
  assignedTo      User?           @relation("TaskAssignedTo", fields: [assignedToId], references: [id])
  assignedBy      User?           @relation("TaskAssignedBy", fields: [assignedById], references: [id])

  @@index([companyId])
  @@index([assignedToId])
  @@index([contactId])
  @@index([dueDate])
  @@index([status])
  @@map("crm_tasks")
}

// Email Direction
enum EmailDirection {
  INBOUND
  OUTBOUND
}

// Email Status
enum EmailStatus {
  DRAFT
  QUEUED
  SENT
  DELIVERED
  OPENED
  CLICKED
  BOUNCED
  FAILED
  REPLIED
}

// Email Messages - CRM Email Tracking
model EmailMessage {
  id              String          @id @default(cuid())
  companyId       String

  // Message Details
  direction       EmailDirection
  subject         String
  body            String          @db.Text
  bodyHtml        String?         @db.Text

  // Addresses
  fromEmail       String
  fromName        String?
  toEmail         String
  toName          String?
  ccEmails        String[]
  bccEmails       String[]

  // Status & Tracking
  status          EmailStatus     @default(DRAFT)
  sentAt          DateTime?
  deliveredAt     DateTime?
  openedAt        DateTime?
  clickedAt       DateTime?
  repliedAt       DateTime?
  bouncedAt       DateTime?

  // Tracking Metadata
  openCount       Int             @default(0)
  clickCount      Int             @default(0)
  linksClicked    String[]

  // Thread Tracking
  threadId        String?         // Group related emails
  inReplyTo       String?         // Previous email ID
  messageId       String?         // Email provider message ID

  // Attachments
  attachments     Json?           // {name, url, size, type}[]

  // Related Records
  contactId       String?
  merchantId      String?
  dealId          String?

  // Template Used
  templateId      String?

  // User
  userId          String?

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relationships
  company         Company         @relation(fields: [companyId], references: [id])
  contact         Contact?        @relation(fields: [contactId], references: [id])
  user            User?           @relation(fields: [userId], references: [id])

  @@index([companyId])
  @@index([contactId])
  @@index([threadId])
  @@index([status])
  @@map("crm_emails")
}

// Deal-Contact Relationship (many-to-many with role)
enum DealContactRole {
  PRIMARY_CONTACT
  DECISION_MAKER
  GUARANTOR
  ACCOUNTANT
  BROKER
  ATTORNEY
  OTHER
}

model DealContact {
  id              String          @id @default(cuid())
  dealId          String
  contactId       String
  role            DealContactRole @default(PRIMARY_CONTACT)
  isPrimary       Boolean         @default(false)

  createdAt       DateTime        @default(now())

  deal            Deal            @relation(fields: [dealId], references: [id], onDelete: Cascade)
  contact         Contact         @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@unique([dealId, contactId])
  @@map("deal_contacts")
}

// Communication Sequences (Drip Campaigns)
enum SequenceStatus {
  ACTIVE
  PAUSED
  COMPLETED
  CANCELLED
}

model CommunicationSequence {
  id              String          @id @default(cuid())
  companyId       String

  name            String
  description     String?
  triggerEvent    String          // deal_stage_change, new_lead, etc.

  isActive        Boolean         @default(true)

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  company         Company         @relation(fields: [companyId], references: [id])
  steps           SequenceStep[]
  enrollments     SequenceEnrollment[]

  @@index([companyId])
  @@map("communication_sequences")
}

// Sequence Steps
enum SequenceStepType {
  EMAIL
  SMS
  TASK
  WAIT
  CONDITION
}

model SequenceStep {
  id              String          @id @default(cuid())
  sequenceId      String
  stepOrder       Int

  type            SequenceStepType
  delayDays       Int             @default(0)
  delayHours      Int             @default(0)

  // For Email/SMS
  templateId      String?
  subject         String?
  content         String?         @db.Text

  // For Task
  taskTitle       String?
  taskCategory    TaskCategory?

  // For Condition
  conditionField  String?
  conditionOperator String?
  conditionValue  String?

  isActive        Boolean         @default(true)

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  sequence        CommunicationSequence @relation(fields: [sequenceId], references: [id], onDelete: Cascade)

  @@index([sequenceId])
  @@map("sequence_steps")
}

// Sequence Enrollments
model SequenceEnrollment {
  id              String          @id @default(cuid())
  sequenceId      String
  contactId       String?
  merchantId      String?
  dealId          String?

  status          SequenceStatus  @default(ACTIVE)
  currentStep     Int             @default(0)
  nextStepAt      DateTime?

  startedAt       DateTime        @default(now())
  completedAt     DateTime?
  pausedAt        DateTime?

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  sequence        CommunicationSequence @relation(fields: [sequenceId], references: [id])

  @@index([sequenceId])
  @@index([status])
  @@map("sequence_enrollments")
}

// Saved Filters / Smart Lists
model SavedFilter {
  id              String          @id @default(cuid())
  companyId       String
  userId          String

  name            String
  entityType      String          // contacts, merchants, deals
  filterConfig    Json            // Filter criteria

  isShared        Boolean         @default(false)

  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  company         Company         @relation(fields: [companyId], references: [id])
  user            User            @relation(fields: [userId], references: [id])

  @@index([companyId])
  @@index([userId])
  @@map("saved_filters")
}
